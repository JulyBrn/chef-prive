{% extends 'base.html.twig' %}

{% block body %}

<div class="home" style="background-image: url('/img/nicocheftest.jpg');">
	<div class="home-container-outer p20">

    <div class="home-container-inner  flex align-center flex-column">
        <h2 class="mt20">Le chef privé qui sublimera vos événement !</h2>
				<div class="entry-text pb20">
				 	<p>
						Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
						Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
						Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.
        	</p>
				</div>
    </div>

		<div class="menu-section mt30 flex flex-center">
			<div class="menu-container flex flex-between">
				<div class="menu-item">
					<a href="#">
						<img src="/img/plat1.jpg" alt="Plat 1">
					</a>
    		</div>
    		<div class="menu-item">
					<a href="#">
						<img src="/img/plat2.jpg" alt="Plat 2">
					</a>
    		</div>
    		<div class="menu-item">
					<a href="#">
      			<img src="/img/plat3.jpg" alt="Plat 3">
					</a>	
    		</div>
  		</div>
		</div>

		<div class="form-container">
			<h2>Contactez-moi</h2>
			<p>Remplissez ce formulaire pour me contacter</p>
			<form method="POST">
				<div class="form-row">
					<div class="form-group">
						{{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
						{{ form_errors(form.nom) }}
					</div>
					<div class="form-group">
						{{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
						{{ form_errors(form.prenom) }}
					</div>
				</div>

				<div class="form-row">
					<div class="form-group">
						{{ form_widget(form.telephone, {'attr': {'class': 'form-control', 'placeholder': 'Téléphone'}}) }}
						{{ form_errors(form.telephone) }}
					</div>
					<div class="form-group">
						{{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
						{{ form_errors(form.email) }}
					</div>
				</div>

				<div class="form-group textarea">
					{{ form_widget(form.message, {'attr': {'class': 'form-control', 'placeholder': 'Votre Message', 'rows': '5'}}) }}
					{{ form_errors(form.message) }}
				</div>

				<button type="submit" class="btn-submit">Envoyer</button>
			</form>
		</div>

	</div>
</div>



{% endblock %}
